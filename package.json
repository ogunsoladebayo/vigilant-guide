{
  "name": "pizza-service",
  "version": "1.0.0",
  "description": "Sample app for pizza service",
  "main": "index.js",
  "config": {
    "protocol": "http",
    "host": "localhost",
    "port": 3000,
    "contextRoot": ""
  },
  "pact": {
    "providerBaseUrl": "",
    "pactBrokerUrl": ""
  },
  "scripts": {
    "clean": "rimraf dist",
    "test": "jest --coverage",
    "tdd": "jest --watch",
    "prebuild": "npm run clean",
    "build": "tsc",
    "prestart": "npm run build",
    "start": "npm run serve",
    "serve": "node dist/src",
    "start:dev": "ts-node src | pino-pretty -c -t -i req.headers,res.headers --singleLine",
    "pact:verify": "ts-node test/pact-verify",
    "pact:publish": "ts-node test/pact-publish",
    "sonarqube:scan": "npm run test && ts-node test/sonarqube-scan"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "^4.3.3",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.7",
    "dotenv": "^16.0.3",
    "graphql": "^16.6.0",
    "jaeger-client": "^3.18.1",
    "mongoose": "^6.9.1",
    "opentracing": "^0.14.5",
    "pino": "^6.13.2",
    "pino-http": "^8.3.3",
    "rxjs": "^7.3.0",
    "superagent": "^8.0.9",
    "supertest": "^6.3.3",
    "tslib": "^2.3.1",
    "type-graphql": "^2.0.0-beta.1",
    "typescript-ioc": "^3.2.2"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-typescript": "^7.15.0",
    "@pact-foundation/pact": "^9.16.1",
    "@pact-foundation/pact-node": "^10.13.7",
    "@types/cls-hooked": "^4.3.3",
    "@types/cors": "^2.8.13",
    "@types/jaeger-client": "^3.18.3",
    "@types/jest": "^27.0.1",
    "@types/jest-plugin-context": "^2.9.4",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "babel-jest": "^27.1.1",
    "eslint": "^8.34.0",
    "jest": "^27.1.1",
    "jest-plugin-context": "^2.9.0",
    "jest-sonar-reporter": "^2.0.0",
    "pino-pretty": "^7.0.0",
    "rimraf": "^3.0.2",
    "set-value": "^4.1.0",
    "sonarqube-scanner": "^2.8.1",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ogunsoladebayo/pizza-service.git"
  }
}
